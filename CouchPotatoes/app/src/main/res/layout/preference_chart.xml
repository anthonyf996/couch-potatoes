    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:id="@+id/chartArray"
        android:layout_width="match_parent"
        android:layout_height="453dp" />

    <Button
        android:id="@+id/subcategorySubmitButton"
