<?xml version="1.0" encoding="utf-8"?>

<!--top header of the side navigation bar menu-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/red_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context="com.example.potato.couchpotatoes.MatchingActivity">

    <!--Circular image of the user's profile picture-->
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@drawable/profile_white"
        android:visibility="gone"
        app:civ_border_color="#0f4bff"
        app:civ_border_width="1dp" />

    <!--displays the user's name-->
    <ImageView
        android:id="@+id/sidebarProfilePic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        app:srcCompat="@drawable/profile_white" />

    <TextView
        android:id="@+id/sidebar_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

    <!--displays the user's email-->
    <TextView
        android:id="@+id/sidebar_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
</LinearLayout>
