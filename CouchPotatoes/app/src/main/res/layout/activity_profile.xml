<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lmao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:fontFamily="@font/courgette"
                android:paddingLeft="4dp"
                android:text="Donald Trump, 70"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                app:srcCompat="@drawable/images" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/settingsTab"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Settings" />

                <Button
                    android:id="@+id/button3"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit Photos" />
            </LinearLayout>

            <TextView
                android:id="@+id/biography_title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:fontFamily="@font/courgette"
                android:paddingLeft="4dp"
                android:text="Biography"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/user_bio"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/acme"
                android:gravity="top"
                android:hint="@string/user_bio_hint"
                android:maxLength="140"
                android:singleLine="false" />

            <TextView
                android:id="@+id/interests_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/courgette"
                android:paddingLeft="4dp"
                android:text="Interests"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="24dp" />

            <Button
                android:id="@+id/moviePrefTab"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow"
                android:gravity="bottom|left"
                android:text="@string/pref_title_movies" />

            <TextView
                android:id="@+id/movies_selection"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:fontFamily="@font/acme"
                android:paddingLeft="8dp"
                android:text="TextView" />

            <Button
                android:id="@+id/sportsPrefTab"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow"
                android:gravity="bottom|left"
                android:text="@string/pref_title_sports" />

            <TextView
                android:id="@+id/sports_selection"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:fontFamily="@font/acme"
                android:paddingLeft="8dp"
                android:text="TextView" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
